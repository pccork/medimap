{{> menu}}

<form class="box"  action="/department/{{institution._id}}/updatedepartment/{{department._id}}" method="POST">
  <label>Update Department Details:</label>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <input class="input" type="text" name="title", value="{{department.title}}">
      </div>
      <div class="field">
        <input class="input" type="text" name="email" value="{{department.email}}">
      </div>
      <div class="field">
        <input class="input" type="text"  name="contact" value="{{department.contact}}">
      </div>
      <div class="field">
        <input class="input" type="text"  name="date" value="{{department.date}}">
      </div>
    </div>
  </div>
  <button class="button is-primary">Update Department</button>
</form>